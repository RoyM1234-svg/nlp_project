    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["--batch_size", "32", "--lr", "0.001"]
        },
        {
            "name": "Python Debugger: Main Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/analyze.py",
            "console": "integratedTerminal",
            "args": ["--batch_size", "32", "--lr", "0.001"]
        }
    ]
}